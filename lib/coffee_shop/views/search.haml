%form(action='/search' method='get')
  %label(for='latitude') Latitude:
  %input(type='number' name='latitude' value = @latitude required step = '0.0001' min = '-90' max = '90')
  %label(for='longitude') Longitude:
  %input(type='number' name='longitude' value = @longitude required step='0.0001' min = '-180' max = '180')
  %button(type='submit') Search

- unless @latitude.nil? && @longitude.nil?
  %a.button(href='/search') Clear coordinates

%a.button(href='/') Back

%body
  = haml :_coffee_shops, layout: false
